extends layout

append head
  link(rel="stylesheet" href="/stylesheets/story-navbar.css")
  link(rel="stylesheet" href="/stylesheets/index.css")
  link(rel="stylesheet" href="/stylesheets/footer.css")

block content
  include story-navbar.pug

  .main__container
    .main__col1.col
      div(class="main__col1-image")
        a(href=`/stories/${stories[0].id}`)
          .story-image.image(style=`background-image: url('${stories[0].imageSrc}')`)
      .main__col1-info
        .author
          .picture
            a(href=`/users/${stories[0].User.id}`)
              img(src=`${stories[0].User.profilePic}` class="profile-pic")
          //- .name
          a(href=`/users/${stories[0].User.id}`) #{stories[0].User.firstName} #{stories[0].User.lastName}
        .title
          a(href=`/stories/${stories[0].id}`) #{stories[0].title}
        .text #{stories[0].content.split(" ").splice(0, 22).join(" ")+"..."}
        //- .text #{stories[0].content}

    .main__col2.col
      - var m = 1;
        while m < 5
          div(class=`main__col2-story`)
            .author
              .picture
                a(href=`/users/${stories[m].User.id}`)
                  img(src=`${stories[m].User.profilePic}` class="profile-pic")
              //- .name
              a(href=`/users/${stories[m].User.id}`) #{stories[m].User.firstName} #{stories[m].User.lastName}
            .title
              a(href=`/stories/${stories[m].id}`) #{stories[m].title}
            //- .text #{stories[m].content.split(" ").splice(0, 10).join(" ")+"..."}
          div(class=`main__col2-story-image-${m}` style="margin-bottom: 20px;")
            a(href=`/stories/${stories[m].id}`)
              div(class="image story-image" style=`background-image: url('${stories[m].imageSrc}')`)
          - m++

    .main__col3.col
      .follows__container
        .follows__header
          p RECENTLY FOLLOWED
        .follows__list
          each follow in follows
            .following__profile
              a(href=`/users/${follow.id}`)
                img(class="following__profile-image" src=`${follow.profilePic}`)
              p
                .following__profile-name #{follow.firstName} #{follow.lastName}


  .body__container
    .body__col1
      - var n = 5;
      while n < 12
        div(class=`body__col1-story`)
          .author
            .picture
              a(href=`/users/${stories[n].User.id}`)
                img(src=`${stories[n].User.profilePic}` class="profile-pic")
            //- .name
            a(href=`/users/${stories[n].User.id}`) #{stories[n].User.firstName} #{stories[n].User.lastName}
          .title
            a(href=`/stories/${stories[n].id}`) #{stories[n].title}
          .text #{stories[n].content.split(" ").splice(0, 24).join(" ")+"..."}
          //- .text #{stories[n].content}
        div(class=`body__col1-story-image-${n}` style="margin-top: 20px;")
          a(href=`/stories/${stories[n].id}`)
            div(class="image story-image" style=`background-image: url('${stories[n].imageSrc}')`)
        - n++

    .body__col2

  include footer.pug

