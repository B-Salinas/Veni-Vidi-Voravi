.nav__container
    div(class="nav__logo")
        a(href="/")
            img(src="/images/logo.png")
    div(class="nav__title" id="nav__username")
        .nav__username
            .username #{followedUser.firstName} #{followedUser.lastName}
            div(class="followers")
                a(href=`/users/${followedUser.id}/followers`)
                    span #{followers.length} Followers
            div(class="following")
                a(href=`/users/${followedUser.id}/following`)
                    span #{following.length} Following
            //- div
            //- If you are the loggedIn User, you cannot see the Follow Button
            div(class="button")
                if userId !== followedUserId
                    if isFollowing
                        button(class=`${userId} ${followedUserId} nav__follow-button nav__followed` type="submit") Following
                    else
                        button(class=`${userId} ${followedUserId} nav__follow-button` type="submit") Follow
    div(class="nav__links")
        a(href="/our-story") Our Story
        a(href="/stories/create") Write a Story
        form(action="/users/logout" method="post")
            button(class="logout-button" type="submit") Log Out
        a(href=`/users/${user.id}`)
            img(class="profile-pic" src=`${user.profilePic}`)
