extends layout

append head
    link(rel="stylesheet" href="/stylesheets/profile.css")
    link(rel="stylesheet" href="/stylesheets/footer.css")

block content
    .nav__container
        div(class="nav__logo")
            a(href="/")
                p LOGO HERE
        div(class="nav__title") #{user.firstName} #{user.lastName}
        div(class="nav__links")
            a(href="/our-story") Our Story
            a(href="/stories/create") Write a Story
            form(action="/users/logout" method="post")
                button(class="logout-button" type="submit") Log Out
            a(href=`/users/${user.id}`)
                img(class="profile-pic" src=`${user.profilePic}`)
            //- whoever is the logged in user, must have the picture here

    .profile__container
        .profile__user
            div
                img(class="profile-pic-main" src=`${user.profilePic}`)
            div
                p.user__name #{user.firstName} #{user.lastName}
            div
                p.user__about #{user.about}

        .profile__story
            each story in userStories
                div
                    p #{story.title}
                


    include footer.pug
