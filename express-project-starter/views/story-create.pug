extends layout.pug

include utils.pug

block content
  +validationErrorSummary(errors)
  form(action='/stories/create' method='post')
    input(type="hidden", name="_csrf" value=csrfToken)
    +field('Title', 'title', story.title, "text", "Your title")
    +field('Title Image', 'titleImage', story.imageSrc, "url", "Your image URL")
    +field('Body', 'content', story.content, "textarea")
    div(class='py-4')
      button(type='submit' class='btn btn-primary') Create Story
      a(href='/' class='btn btn-warning ml-2') Cancel
