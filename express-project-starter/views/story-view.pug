extends layout.pug 

append head
  link(rel="stylesheet" href="/stylesheets/story-view.css")

block content
  nav(class="nav__create")
    .nav__container
      div(class="nav__logo")
        a(href="/")
          //- img(src="")
          p LOGO HERE
      div(class="nav__title") Veni, Vidi, Voravi
      div(class="nav__links")
        a(href="/our-story") Our Story
        a(href="/stories/create") Write a Story
        a(href="/welcome") Log Out
        a(href="/users/:id") Profile
  .story__container 
    div(class="story__title")= story.title
    div(class="story__author") By #{user.firstName} #{user.lastName}
    div(class="story__image")
        img(src=story.imageSrc)
    div(class="story__content")
        p= story.content 
