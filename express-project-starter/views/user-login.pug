extends layout.pug

include utils.pug

append head
  link(rel="stylesheet" href="/stylesheets/user-login.css")

block content
  +validationErrorSummary(errors)
  .container
    .header
      a(href='/welcome')
        .header__title Veni, Vidi, Voravi 
        //- FIX CENTERING OF TITLE AND SUBTITLE
      .header__subtitle where good food finds you
    .form
      form(action='/users/login' method='post')
        input(type='hidden' name='_csrf' value=csrfToken)
        .form__title
          label Login
        +field('Email', 'emailAddress', emailAddress, "email", "example@mail.com")
        +field('Password', 'password', null, 'password', "Your password")
        .login Don't have an account? &nbsp;
            a(href="/users/register") Register now
            button(type="submit") Log In
        .login Don't want an account? &nbsp;
            a(href="/users/demouser") Try Our Demo
    .footer
      .footer__links
        a(href="https://github.com/rsdimatulac/Veni-Vidi-Voravi")
          i(class="fab fa-github" aria-hidden="true")
